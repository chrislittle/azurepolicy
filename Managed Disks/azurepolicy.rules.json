{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.Compute/disks"
      },
      {
        "field": "Microsoft.Compute/disks/networkAccessPolicy",
        "In": [
              "AllowPrivate",
              "AllowAll"
            ]
      },
      {
        "field": "Microsoft.Compute/disks/publicNetworkAccess",
        "notEquals": "Disabled"
      }
    ]
  },
  "then": {
    "effect": "[parameters('effect')]"
  }
}