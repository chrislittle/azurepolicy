{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Network/virtualNetworks"
            },
            {
                "field": "location",
                "equals": "[parameters('listOfLocations')]"
            },
            {
                "field": "Microsoft.Network/virtualNetworks/dhcpOptions.dnsServers",
                "notEquals": "[parameters('dnsServers')]"
            }
        ]
        },
    "then": {
        "effect": "append",
        "details": [
            {
            "field": "Microsoft.Network/virtualNetworks/dhcpOptions.dnsServers",
            "value": "[parameters('dnsServers')]"
            }
        ]
    }
}