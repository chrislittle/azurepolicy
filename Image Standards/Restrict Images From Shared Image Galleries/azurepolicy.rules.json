{
"if": {
    "allOf": [
       {
          "field": "type",
          "equals": [
             "Microsoft.Compute/virtualMachines",
             "Microsoft.Compute/VirtualMachineScaleSets"
          ]
       },
       {
          "not": {
             "field": "Microsoft.Compute/imageId",
             "in": "[parameters('ApprovedStorageImageLocation')]"
          }
       }
    ]
 },
 "then": {
    "effect": "deny"
 }
}