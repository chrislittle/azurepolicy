{
   "type": "Microsoft.Authorization/policyDefinitions",
   "name": "Restrict-Images-Galleries", 
   "properties": {
       "displayName": "Restrict virtual machine images to a defined list of shared image galleries",
       "mode": "All",
       "description": "This policy restricts virtual machine images to a defined list of shared image galleries",
       "parameters": {
           "listOfSharedImageGalleries": {
               "type": "Array",
               "metadata": {
                   "description": "Specify the list of shared image galleries to allow.",
                   "displayName": "List of Shared Image Galleries",
                   "strongType": "gallery"
               }
           }
       },
       "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Compute/virtualMachines"
                },
                {
                    "field": "Microsoft.Compute/galleries/identifier.uniqueName",
                    "notIn": "[parameters('listOfSharedImageGalleries')]"
                }
            ]
        },
        "then": {
            "effect": "deny"
        }
       }
   }   
}
