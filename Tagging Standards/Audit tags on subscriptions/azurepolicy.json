{
    "properties": {
        "displayName": "Audit Subscriptions with Defined Tags",
        "description": "Audit Subscriptions for the presence of defined tags.",
        "mode": "All",
        "parameters": {
          "definedTags": {
            "type": "array",
            "metadata": {
              "description": "Define the tags that should be present on all subscriptions.",
              "displayName": "Defined Tags",
              "strongType": "tag"
            }
          }
        },
       "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Resources/subscriptions"
            },
            {
              "field": "Microsoft.Resources/subscriptions/tags",
              "exists": "false"
            }
          ]
        },
        "then": {
          "effect": "audit"
        }
      }
    }
}   
