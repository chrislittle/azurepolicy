{
    "properties": {
        "displayName": "Audit Subscriptions with Defined Tags",
        "description": "Audit Subscriptions for the presence of defined tags.",
        "mode": "Indexed",
        "parameters": {
          "tagName1": {
            "type": "String",
            "metadata": {
              "description": "Tag Name 1",
              "displayName": "Name of the tag"
            }
          },
          "tagName2": {
            "type": "String",
            "metadata": {
              "description": "Tag Name 2",
              "displayName": "Name of the tag"
            }
          }
        },
       "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Resources/subscriptions"
            },
            {
              "field": "[concat('tags[', parameters('tagName1'), ']')]",
              "exists": "false"
            },
            {
              "field": "[concat('tags[', parameters('tagName2'), ']')]",
              "exists": "false"
            },
            {
              "value": "[subscription().tags[parameters('tagName1')]]",
              "notEquals": ""
            },
            {
              "value": "[subscription().tags[parameters('tagName2')]]",
              "notEquals": ""
            }
          ]
        },
        "then": {
          "effect": "audit"
        }
      }
    }
}   
